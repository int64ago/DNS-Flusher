{
  "name": "DNS Flusher Plus",
  "version": "1.2.1",
  "manifest_version": 2,
  "description": "Flash DNS cache by one click",
  "browser_action": {
    "default_title": "Flush DNS and reload"
  },
  "commands": {
    "flash-and-reload": {
      "suggested_key": {
        "default": "Ctrl+Shift+F",
        "mac": "Command+Shift+F"
      },
      "description": "Flush DNS and reload"
    }
  },
  "options_page": "options.html",
  "background": {
    "scripts": ["background.js"]
  },
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  },
  "permissions": [
    "tabs",
    "contextMenus"
  ]
}

